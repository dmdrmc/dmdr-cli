@font-face {
	font-family: "{{fontName}}";
	src: {{{strip_hashtag src}}};
}

@if not variable-exists('webfont-icons') {
	$webfont-icons: () !global;
}

$webfont-icons: map-merge($webfont-icons, (
	{{#each codepoints}}
		'{{@key}}': ('{{../fontName}}' '{{this}}'),
	{{/each}}
));

.icon {
	font-family: {{fontName}} !important;
	font-style: normal;
	font-weight: normal !important;
	vertical-align: top;
}

{{#each codepoints}}
	i.icon.{{@key}} { 
		&:before {
			content: "\\{{this}}";
		}
	}
{{/each}}
